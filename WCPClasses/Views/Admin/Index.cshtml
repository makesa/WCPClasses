<div class="wrapper">


		<table class="table table-striped">
		<thead>
			<tr>
				<th>First Name</th>
                <th>Last Name</th>

                <th>Email Address</th>
			</tr>
		</thead>
		<tbody>
			@for (var i = 0; i < Model.Participants.Count; i++)
			{
				<tr>
					<td>@Model.Participants[i].FullName</td>
					<td>
						@Html.ActionLink("Detail", "ParticipantDetail", new { id = Model.Participants[i].ParticipantId })
						| @Html.ActionLink("Edit", "ParticipantEdit", new { id = Model.Participants[i].ParticipantsId })
						| <a data-toggle="modal" href="@("#deleteParticipantModal" + i)">Delete</a>
						<div class="modal fade" id="@("deleteParticipantModal" + i)" tabindex="-1" role="dialog">
							<div class="modal-dialog">
								<div class="modal-content">
									@using (Html.BeginForm("DeleteParticipant", "Person"))
									{
										<input type="hidden" value="@Model.People[i].PersonId" name="ParticipantId" />
										<div class="modal-header">
											<button type="button" class="close" data-dismiss="modal">&times;</button>
											<h4 class="modal-title">Delete @Model.Participants[i].FullName</h4>
										</div>
										<div class="modal-body">
											Are you sure you want to delete @Model.Participants[i].FullName?
										</div>
										<div class="modal-footer">
											<button type="submit" class="btn btn-primary">Yes</button>
											<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
										</div>
									}
								</div>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
        
    </div>