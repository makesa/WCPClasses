<div class="wrapper">


    <table class="">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>

                <th>Email Address</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Participants.Count; i++)
            {
            <tr>
                <td>@Model.Participants[i].FullName</td>
                <td>
                    @Html.ActionLink("Detail", "ParticipantDetail", new { id = Model.Participants[i].ParticipantId })
                    | @Html.ActionLink("Edit", "ParticipantEdit", new { id = Model.Participants[i].ParticipantId })
                    | <a data-toggle="modal" href="@(" #deleteParticipantModal" + i)">Delete</a>
                    <div class="modal fade" id="@(" deleteParticipantModal" + i)" tabindex="-1" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                @using (Html.BeginForm("DeleteParticipant", "Participant"))
                                {
                                <input type="hidden" value="@Model.Participants[i].ParticipantId" name="ParticipantId" />
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Delete @Model.Participants[i].EmailAddress</h4>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete @Model.Participants[i].FullName?
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Yes</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>
